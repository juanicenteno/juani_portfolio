---
import "../css/Projects.css";
import projects from "../data/projects.json";
---

<section class="projects_container">
    <article class="projects_title">
        <h2>Proyectos Destacados<small class="point"></small></h2>
        <p>
            Explorando mi trabajo más reciente: proyectos Full Stack enfocados en performance, infraestructura y experiencia de usuario (UX/UI).
        </p>
    </article>
    <article class="container_boxes">
        {projects.map((project) => (
                <div class="box_project">
                    <img src={project.img} alt="" />
                    <div class="project_desc">
                        <h3>{project.name}</h3>
                        <p>{project.description}</p>
                        <ul class="technologies_used">
                            {project.technologies.map((tech, i) => (
                                <li>{tech}</li>
                            ))}
                        </ul>
                    </div>
                    <div class="links_project">
                        <a href={project.github} target="_blank">
                            <svg
                                height="32"
                                aria-hidden="true"
                                viewBox="0 0 24 24"
                                version="1.1"
                                width="32"
                                data-view-component="true"
                                class="octicon octicon-mark-github v-align-middle"
                            >
                                <path d="M12 1C5.923 1 1 5.923 1 12c0 4.867 3.149 8.979 7.521 10.436.55.096.756-.233.756-.522 0-.262-.013-1.128-.013-2.049-2.764.509-3.479-.674-3.699-1.292-.124-.317-.66-1.293-1.127-1.554-.385-.207-.936-.715-.014-.729.866-.014 1.485.797 1.691 1.128.99 1.663 2.571 1.196 3.204.907.096-.715.385-1.196.701-1.471-2.448-.275-5.005-1.224-5.005-5.432 0-1.196.426-2.186 1.128-2.956-.111-.275-.496-1.402.11-2.915 0 0 .921-.288 3.024 1.128a10.193 10.193 0 0 1 2.75-.371c.936 0 1.871.123 2.75.371 2.104-1.43 3.025-1.128 3.025-1.128.605 1.513.221 2.64.111 2.915.701.77 1.127 1.747 1.127 2.956 0 4.222-2.571 5.157-5.019 5.432.399.344.743 1.004.743 2.035 0 1.471-.014 2.654-.014 3.025 0 .289.206.632.756.522C19.851 20.979 23 16.854 23 12c0-6.077-4.922-11-11-11Z" />
                            </svg>
                            GitHub
                        </a>
                        <a href={project.website} target="_blank">
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke-width="1.5"
                                stroke="currentColor"
                                class="size-6"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    d="M9 17.25v1.007a3 3 0 0 1-.879 2.122L7.5 21h9l-.621-.621A3 3 0 0 1 15 18.257V17.25m6-12V15a2.25 2.25 0 0 1-2.25 2.25H5.25A2.25 2.25 0 0 1 3 15V5.25m18 0A2.25 2.25 0 0 0 18.75 3H5.25A2.25 2.25 0 0 0 3 5.25m18 0V12a2.25 2.25 0 0 1-2.25 2.25H5.25A2.25 2.25 0 0 1 3 12V5.25"
                                />
                            </svg>
                            WebSite
                        </a>
                    </div>
                </div>
            ))}
    </article>
    <article class="see-more">
        <span>¿Quieres ver más?</span>
        <a href="https://github.com/juanicenteno" target="_blank"
            >Ver todos los Proyectos <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="size-6"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M17.25 8.25 21 12m0 0-3.75 3.75M21 12H3"></path>
            </svg>
        </a>
    </article>
</section>
